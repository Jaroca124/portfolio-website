{% embed "@atoms/layout/layout-site/_layout-site-main.twig" with
    {
        "layout_site_id": "layout--experience"
    }
%}
    {% block hero %}
        {% embed "@organisms/heros/hero-section/_hero-section-main.twig" with
            {
                "hero_section_title": "Experience"
            }
        %}{% endembed %}
    {% endblock %}
    
    {% block main %}
        <div class="container">
            <div class="row">
                <div class="col-sm mx-auto">
                    {% include "@organisms/sections/view-experience/_view-experience-main.twig" with
                        {
                            "view_experience_data": experience.experience_data
                        }
                    %}
                </div>
            </div>
        </div>
    {% endblock %}

    {% block footer %}
        {% include "@organisms/global/global-footer/_global-footer-main.twig" %}
    {% endblock %}
{% endembed %}