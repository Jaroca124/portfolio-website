{% set template_id = template_id|default() %}
{% set template_hero_content %}
    {% block template_hero_content %}{% endblock %}
{% endset %}
{% set template_main_content %}
    {% block template_main_content %}{% endblock %}
{% endset %}

{% embed "@atoms/layout/layout-site/_layout-site-main.twig" with
    {
        "layout_site_id": template_id
    }
%}
    {% block hero %}
        {{ template_hero_content|raw }}
    {% endblock %}
    {% block main %}
        {{ template_main_content|raw }}
    {% endblock %}
    {% block footer %}
        {% include "@organisms/global/global-footer/_global-footer-main.twig" %}
    {% endblock %}
{% endembed %}
