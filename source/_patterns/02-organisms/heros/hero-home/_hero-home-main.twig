{% set hero_home_classes = hero_home_classes|default() %}
{% set hero_home_shots = hero_home_shots|default() %}

<div class="hero-pl hero--home {{ hero_home_classes }}">
    {% include "@molecules/navigation/navigation-primary/_navigation-primary-main.twig" with
        {
            "navigation_primary_showhome": true
        }
    %}
    {% include "@molecules/components/component-gallery/_component-gallery-main.twig" with
        {
            "component_gallery_data": hero_home_shots
        }
    %}
    <div class="hero--home__overlay">
        {% include "@molecules/components/component-media-links/_component-media-links-main.twig" with
            {
                "component_media_links_classes": "hero--home__overlay__social"
            }
        %}
        <div class="hero--home__overlay__content">
            {% include "@atoms/images/image-logo/_image-logo-main.twig" %}
            {% include "@molecules/components/component-media-links/_component-media-links-main.twig" with
                {
                    "component_media_links_classes": "hero--home__overlay__content__social"
                }
            %}
        </div>
    </div>
    {#{% include "@molecules/components/component-scroll/_component-scroll-main.twig" %}#}
</div>
{% include "@molecules/components/component-loader/_component-loader-main.twig" %}